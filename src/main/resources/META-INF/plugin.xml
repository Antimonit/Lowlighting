<idea-plugin>

    <!-- Unique id for this plugin. Must stay constant for the life of the plugin. -->
    <id>me.khol.intellij.lowlighting</id>

    <!-- Text to display as name on Preferences/Settings | Plugin page -->
    <name>Lowlighting</name>

    <!-- Product and plugin compatibility requirements -->
    <depends>com.intellij.modules.platform</depends>
    <depends>com.intellij.modules.java</depends>

    <depends optional="true" config-file="withKotlin.xml">org.jetbrains.kotlin</depends>

    <!-- Text to display as company information on Preferences/Settings | Plugin page -->
    <vendor url="https://antimonit.github.io/">David Khol</vendor>

    <extensions defaultExtensionNs="com.intellij">
        <fileType
            name="Lowlighting File"
            implementationClass="me.khol.intellij.lowlighting.LowlightingFileType"
            language="Lowlighting"
            fileNames=".lowlighting"
        />
        <lang.parserDefinition
            language="Lowlighting"
            implementationClass="me.khol.intellij.lowlighting.language.LowlightingParserDefinition"
        />
        <lang.syntaxHighlighterFactory
            language="Lowlighting"
            implementationClass="me.khol.intellij.lowlighting.LowlightingSyntaxHighlighterFactory"
        />
        <completion.contributor
            language="Lowlighting"
            implementationClass="me.khol.intellij.lowlighting.LowlightingCompletionContributor"
        />
        <lang.findUsagesProvider
            language="Lowlighting"
            implementationClass="me.khol.intellij.lowlighting.language.LowlightingFindUsagesProvider"
        />
        <psi.referenceContributor
            implementation="me.khol.intellij.lowlighting.language.LowlightingReferenceContributor"
        />

        <codeInsight.lineMarkerProvider
            language="JAVA"
            implementationClass="me.khol.intellij.lowlighting.LowlightingLineMarkerProvider"
        />

        <annotator
            language="JAVA"
            implementationClass="me.khol.intellij.lowlighting.LowlightingAnnotator"
        />
        <lang.foldingBuilder
            language="JAVA"
            implementationClass="me.khol.intellij.lowlighting.LowlightingFoldingBuilder"
        />
        <!-- TODO: Toggle back on when there are things to configure application-wide -->
